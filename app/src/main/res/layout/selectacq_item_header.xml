<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal"
    android:paddingTop="@dimen/space_vertical"
    android:paddingBottom="@dimen/space_vertical"
    android:paddingStart="@dimen/space_horizontal"
    android:paddingEnd="@dimen/space_horizontal"
    android:id="@+id/select_acq_item_header">

    <CheckBox
        android:id="@+id/item_select_acq_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@id/expandable_toggle_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_horizontal_small"
        android:layout_marginEnd="@dimen/space_horizontal_small"
        android:text="@string/acq_select_all"
        android:textColor="@color/primary_text_light"
        android:textSize="@dimen/font_size_prompt" />
</LinearLayout>