<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="?attr/listPreferredItemPaddingStart">

        <Button
            android:id="@+id/all_channel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/btn_bg_light"
            android:text="@string/all_payment_channel"
            android:layout_margin="10dp"
            android:textColor="@color/primary_text_dark"
            android:textSize="@dimen/font_button" />

        <Button
            android:id="@+id/select_channel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/btn_bg_light"
            android:text="@string/select_payment_channel"
            android:textColor="@color/primary_text_dark"
            android:layout_margin="10dp"
            android:textSize="@dimen/font_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>