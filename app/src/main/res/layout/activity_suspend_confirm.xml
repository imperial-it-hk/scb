<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/suspended_qr"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_suspend_qr"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/suspend_trace_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="50dp">

            <Button
                android:id="@+id/cancel_suspend_btn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textSize="@dimen/btn"
                android:textColor="@color/default_red_cancel_btn"
                android:background="@drawable/cancelbtn"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/confirm_delete_suspend_btn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/confirmbtn"
                android:textSize="@dimen/btn"
                android:textColor="@color/default_confirm_text_btn"
                android:text="@string/dialog_ok" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>