<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/divider" android:startColor="@color/icons" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"    android:topLeftRadius="4dp" android:topRightRadius="4dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/divider" android:startColor="@color/icons" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"    android:topLeftRadius="4dp" android:topRightRadius="4dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/icons" android:startColor="@color/icons" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"    android:topLeftRadius="4dp" android:topRightRadius="4dp"/>
        </shape>
    </item>

</selector>